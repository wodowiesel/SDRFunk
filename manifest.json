   "incognito": "spanning",
   "devtools_page": "html/devtools.html",
   "chrome_url_overrides" : {"newtab": "about:blank"},
   "options_ui":
   {
     "browser_style": true,
     "open_in_tab": true,
     "page": "html/options.html"
   },

   "browser_specific_settings":
